{
  "name": "groundcontrol-frontend",
  "version": "1.1.3",
  "private": true,
  "engines": {
    "node": ">=15.2",
    "npm": ">=7.0.10"
  },
  "author": "Spacegoats Engineering <engineering@spacegoats.io>",
  "dependencies": {
    "@apollo/client": "3.3.14",
    "@emotion/babel-plugin": "11.3.0",
    "@emotion/react": "11.1.5",
    "@emotion/styled": "11.3.0",
    "antd": "4.15.1",
    "apollo-link-error": "1.1.13",
    "apollo-link-rest": "0.7.3",
    "dayjs": "1.10.4",
    "graphql": "15.5.0",
    "graphql-anywhere": "4.2.7",
    "graphql-tag": "2.11.0",
    "jest-junit": "12.0.0",
    "less": "4.1.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "5.2.0",
    "react-scripts": "4.0.3"
  },
  "devDependencies": {
    "@craco/craco": "6.1.1",
    "@testing-library/jest-dom": "5.11.10",
    "@testing-library/react": "11.2.6",
    "@testing-library/react-hooks": "5.1.1",
    "@testing-library/user-event": "13.0.16",
    "@types/jest": "26.0.22",
    "@types/node": "14.14.37",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.3",
    "@types/react-router-dom": "5.1.7",
    "@types/webpack-env": "1.16.0",
    "antd-dayjs-webpack-plugin": "1.0.6",
    "babel-plugin-import": "1.13.3",
    "craco-antd": "1.19.0",
    "eslint": "7.24.0",
    "eslint-plugin-flowtype": "5.6.0",
    "husky": "6.0.0",
    "jest-environment-jsdom-sixteen": "1.0.3",
    "less-loader": "8.1.0",
    "lint-staged": "10.5.4",
    "msw": "0.28.1",
    "prettier": "2.2.1",
    "react-app-rewired": "2.1.8",
    "react-test-renderer": "17.0.2",
    "swagger-typescript-api": "8.0.3",
    "trace-unhandled": "2.0.1",
    "typescript": "4.2.4"
  },
  "scripts": {
    "start": "craco start",
    "dev": "npm start",
    "build": "craco build",
    "test": "craco test --coverage --env=jest-environment-jsdom-sixteen",
    "test:ci": "craco test --coverage --watchAll=false --env=jest-environment-jsdom-sixteen",
    "generate-api-types": "swagger-typescript-api -p http://localhost:3001/swagger.json -o ./src/generated -n api.ts --no-client"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "coverageReporters": [
      "cobertura",
      "json",
      "lcov",
      "text"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
